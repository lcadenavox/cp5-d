@model cp5_d.Models.Vendedor
@{
    ViewData["Title"] = "Excluir Vendedor";
}
<h1>Excluir Vendedor</h1>
<h3>Tem certeza que deseja excluir este vendedor?</h3>
<div>
    <h4>@Model.Nome</h4>
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Telefone</dt>
        <dd class="col-sm-10">@Model.Telefone</dd>
        <dt class="col-sm-2">Loja</dt>
        <dd class="col-sm-10">@Model.Loja?.Nome</dd>
    </dl>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
