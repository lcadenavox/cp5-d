@model cp5_d.Models.Vendedor
@{
    ViewData["Title"] = "Detalhes do Vendedor";
}
<h1>Detalhes do Vendedor</h1>
<div>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Telefone</dt>
        <dd class="col-sm-10">@Model.Telefone</dd>
        <dt class="col-sm-2">Loja</dt>
        <dd class="col-sm-10">@Model.Loja?.Nome</dd>
    </dl>
</div>
<p>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
</p>
