@model cp5_d.Models.Carro
@{
    ViewData["Title"] = "Excluir Carro";
}
<h1>Excluir Carro</h1>
<h3>Tem certeza que deseja excluir este item?</h3>
<div>
    <h4>@Model.Marca @Model.Modelo (@Model.Ano)</h4>
    <dl class="row">
        <dt class="col-sm-2">Preço</dt>
        <dd class="col-sm-10">@Model.Preco.ToString("C")</dd>
        <dt class="col-sm-2">Loja</dt>
        <dd class="col-sm-10">@Model.Loja?.Nome</dd>
    </dl>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
