@model cp5_d.Models.Carro
@{
    ViewData["Title"] = "Detalhes do Carro";
}
<h1>Detalhes do Carro</h1>
<div>
    <dl class="row">
        <dt class="col-sm-2">Marca</dt>
        <dd class="col-sm-10">@Model.Marca</dd>
        <dt class="col-sm-2">Modelo</dt>
        <dd class="col-sm-10">@Model.Modelo</dd>
        <dt class="col-sm-2">Ano</dt>
        <dd class="col-sm-10">@Model.Ano</dd>
        <dt class="col-sm-2">Preço</dt>
        <dd class="col-sm-10">@Model.Preco.ToString("C")</dd>
        <dt class="col-sm-2">Loja</dt>
        <dd class="col-sm-10">@Model.Loja?.Nome</dd>
    </dl>
</div>
<p>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
</p>
